@model ProyectoBeta.Models.Usuarios
    @{
        ViewData["Title"] = "Login";
    }
    <h2>Login</h2>
    <form class="form-horizontal" asp-controller="Usuarios" asp-action="Login" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="NombreUsuario" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NombreUsuario" class="form-control" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Clave" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Clave" class="form-control" />
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default">Login</button>
            </div>
        </div>
    </form>